// Combobox Square - Scroll Content Button
ComboBoxPopupScrollMenuButton < UIButton
  height: 23
  font: verdana-11px-antialised
  text-align: left
  text-offset: 4 0
  color: #dfdfdf
  background-color: alpha
  margin: 1

  $hover !disabled:
    color: #dfdfdf
    background-color: #212629

  $disabled:
    color: #dfdfdf88

// Combobox Square - Scroll Content Popup Menu
ComboBoxPopupScrollMenu < UIPopupScrollMenu
  image-source: /images/ui/combobox_square
  image-clip: 0 69 91 23
  image-border-top: 1
  image-border-bottom: 1
  image-border-left: 1
  image-border-right: 22

// Combobox Square - Content Button
ComboBoxPopupMenuButton < UIButton
  height: 23
