// Combobox Square - Content Popup Menu
ComboBoxPopupMenu < UIPopupMenu
  image-source: /images/ui/combobox_square
  image-clip: 0 69 91 23
  image-border-top: 1
  image-border-bottom: 1
  image-border-left: 1
  image-border-right: 22

// Combobox Square
ComboBox < UIComboBox
  font: verdana-11px-antialised
  color: #dfdfdf
  size: 91 23
  text-offset: 3 0
  text-align: left
  image-source: /images/ui/combobox_square
  image-border-top: 1
  image-border-bottom: 1
  image-border-left: 1
  image-border-right: 22
  image-clip: 0 0 91 23
  &menuScroll: true
  // The correct would be 115 and 23, but it needs 124 31 to work fine and I don't know why
  // On ComboBoxRounded it works normally
  &menuHeight: 124
  &menuScrollStep: 31

  $hover !disabled:
    image-clip: 0 23 91 23

  $on:
    image-clip: 0 46 91 23

  $disabled:
    color: #dfdfdf88
    opacity: 0.8





