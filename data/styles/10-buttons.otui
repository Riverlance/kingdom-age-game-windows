LightButton < Button
  size: 130 21
  image-source: /images/ui/_button/default_rounded
  icon-source: none

  $hover:
    color: #dfdfdfff
    icon-source: /images/ui/_button/light

  $pressed:
    color: #dfdfdfff
    icon-source: /images/ui/_button/light

EmptyMenuButton < UIButton
